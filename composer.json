{
    "name": "stuntrocket/rover",
    "description": "Helper tool for StuntRocket workstations.",
    "type": "library",
    "require": {
        "consolidation/robo": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Rover\\": "./src/"
        }
    },
    "authors": [
        {
            "name": "DannyHarding",
            "email": "danny@stuntrocket.co"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "spatie/ray": "^1.39",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.35",
        "laravel/envoy": "^2.8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Rover\\ScriptHandler::createSymlink"
        ],
        "post-update-cmd": [
            "Rover\\ScriptHandler::createSymlink"
        ]
    }
}
